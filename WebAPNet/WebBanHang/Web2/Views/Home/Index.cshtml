@model List<DTO.DanhMucDTO>


@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <!-- Basic -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Site Metas -->
    <link rel="icon" href="~/images/fevicon.png" type="image/gif" />
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>Dang Van Doan Shop</title>


    <!-- bootstrap core css -->
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.css" />

    <!-- fonts style -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,600,700&display=swap" rel="stylesheet" />

    <!-- font awesome style -->
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/css/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="~/css/responsive.css" rel="stylesheet" />

</head>

<body>
    <!-- Kết hợp giữa Code PHP và Visual Studio. -->
    <!-- bây giờ là sẽ Code vào đây. -->
    <thead>
        <!-- Thẻ để tạo bảng. -->
       
    </thead>
    <!-- Thẻ tBody để in các dữ liệu -->
    <tbody>

        <!-- In thủ công thì sẽ mất thời gian. -->
     
        <!--Sử dụng vòng lặp While để in tự động.-->
        <!--Phải kết nối cơ sở dữ liệu.-->
        <h1>Danh sách danh mục</h1>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên danh mục</th>
                    <th>Mô tả</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.TENDM</td>
                        <td>@item.MOTA</td>
                    </tr>
                }

            </tbody>

        </table>                  

    </tbody>

</body>

</html>
